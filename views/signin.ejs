<section>
  <h2>Sign In</h2>
  <% if (message) { %>
  <p><%= message %></p>
  <% } %>
  <form action="/user/signin" method="post">
    <input type="email" name="email" placeholder="Email" required /><br /><br />
    <input
      type="password"
      name="password"
      placeholder="Password"
      required
    /><br /><br />
    <div
      class="g-recaptcha"
      data-sitekey="6LfaytgrAAAAAK4_GXD5KGgygI8hfYeDSHrMClWK"
    ></div>
    <button
      type="submit"
      class="btn btn-light"
    >
      Sign In
    </button>
  </form>
  <br />
  <!-- Sign-in Google Auth -->
  <a href="/auth/google"><strong>Sign In with Google</strong></a> &nbsp&nbsp

  <!-- Link to forgot password page -->
  <a href="/user/forgot-password"><strong>Forgot Password?</strong></a><br>
  
  <p><strong>Don't have an account?</strong> &nbsp; <a href="/user/signup"><strong>Sign up</strong></a></p>
  
  <div style="margin-top: 20px; padding: 10px; background: rgba(255,255,255,0.1); border-radius: 5px; text-align: center;">
    <small><strong>Sinh viên:</strong> 22712771-Lê Quốc Hưng</small>
  </div>
</section>
